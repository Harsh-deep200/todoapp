<!-- edit.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Edit Task</title>
  </head>

  <body>
    <h1>Edit Task</h1>
    <form
      action="/edit/<%= task.id %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <input type="text" name="task" value="<%= task.task %>" />
      <input type="file" name="photo" />
      <% if (task.photo) { %>
      <img src="/uploads/<%= task.photo %>" alt="Task Photo" height="100" />
      <% } %>
      <button type="submit">Update Task</button>
    </form>
  </body>
</html>
